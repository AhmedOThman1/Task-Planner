<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_yellowsq"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <TextView
        android:id="@+id/deltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        tools:text="Are you sure you want to delete Banking app project with all tasks inside it ?"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/back_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deltxt"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/back"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:paddingEnd="64dp"
        android:paddingStart="64dp"
        android:background="@drawable/background_bluesq"
        android:textColor="#FFF"
        />

    <TextView
        android:id="@+id/delete_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_dialog"
        android:layout_centerHorizontal="true"
        android:paddingEnd="64dp"
        android:paddingStart="64dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/delete"
        android:textSize="15sp"
        android:background="@drawable/background_redsq"
        android:textColor="#FFF"
        android:layout_marginBottom="16dp"/>


</RelativeLayout>