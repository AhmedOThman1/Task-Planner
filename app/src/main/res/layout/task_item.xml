<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/zeti"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/toindone"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:text="task title here" />

        <TextView
            android:id="@+id/toindone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#EEE"
            android:textSize="16sp"
            tools:text="To Do" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_name"
            android:fontFamily="@font/poppins"
            android:textColor="#FFF"
            android:textSize="14sp"
            tools:text="Tue, 28 April 2020" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:fontFamily="@font/poppins"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Tue, 28 April 2020" />

        <TextView
            android:id="@+id/start_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="09:00 PM" />

        <TextView
            android:id="@+id/end_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="09:00 PM" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_name"
            android:layout_toStartOf="@id/bb"
            android:fontFamily="@font/poppins"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="09:00 PM" />

        <TextView
            android:id="@+id/bb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_name"
            android:layout_toStartOf="@id/end_time"
            android:fontFamily="@font/poppins"
            android:text=" - -> "
            android:textColor="#FFF"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_name"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="11:00 PM" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>